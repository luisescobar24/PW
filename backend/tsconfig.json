{
  "compilerOptions": {
    "target": "es2016",                          // Nivel de ECMAScript
    "module": "commonjs",                        // Usar módulos CommonJS
    "outDir": "./dist",                          // Carpeta de salida para los archivos compilados
    "rootDir": "./src",                          // Carpeta donde están los archivos .ts
    "strict": true,                              // Comprobación estricta de tipos
    "esModuleInterop": true,                     // Habilitar interoperabilidad con módulos ES6
    "allowSyntheticDefaultImports": true,        // Permite importaciones "default" de módulos CommonJS
    "skipLibCheck": true,                        // Omite la comprobación de tipos en las bibliotecas
    "resolveJsonModule": true,                   // Permite importar archivos JSON
    "moduleResolution": "node",                  // Resolución de módulos compatible con Node.js
    "sourceMap": true,                           // Genera mapas de fuentes para depuración
    "noEmitOnError": true,                       // No emitir archivos si hay errores
    "skipDefaultLibCheck": true,                 // Omite la comprobación de bibliotecas predeterminadas
    "forceConsistentCasingInFileNames": true,    // Asegura que los nombres de archivo sean consistentes
    "baseUrl": "./src",                          // Base para resolver módulos
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*.ts"],  // Incluir todos los archivos .ts en la carpeta src
  "exclude": ["node_modules"]  // Excluir la carpeta node_modules
}
